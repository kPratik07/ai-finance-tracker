# Application Configuration
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>

# Authentication
JWT_SECRET=<generate_strong_random_secret>

# File Upload Settings
FILE_UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5000000

# AI Provider Configuration
# Choose one: "auto", "groq", "gemini", "openai"
# "auto" will automatically select the best available provider
AI_PROVIDER=auto

# OpenAI Configuration (Optional - Pay per use)
OPENAI_API_KEY=<your-openai-api-key>

# Groq Configuration (Recommended - 14,400 free requests/day)
# Get your free API key from: https://console.groq.com/keys
GROQ_API_KEY=<your-groq-api-key>

# Google Gemini Configuration (Generous free tier - 15 req/min, 1M tokens/day)
# Get your free API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=<your-gemini-api-key>

# Email Configuration (for password reset)
# For Gmail: Use App Password (not regular password)
# Enable 2FA and generate app password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME=AI Finance Tracker

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173